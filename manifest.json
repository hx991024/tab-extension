{
  "manifest_version": 3,
  "name": "极简新标签页",
  "version": "1.0.0",
  "description": "一款极简、高性能、高颜值的通用 Chrome / Edge 新标签页扩展。",
  "author": "Kilo Code",
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "permissions": ["storage"],
  "host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "极简新标签页设置"
  }
}
